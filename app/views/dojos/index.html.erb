<h1>Listing <%= pluralize(@dojos.count, "Dojo") %></h1>

<table class="table table-bordered">
    <thead>
        <th>Branch</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <% @dojos.each do |dojo| %>
        <tr>
            <td><%= dojo["branch"] %></td>
            <td><%= dojo["street"] %></td>
            <td><%= dojo["city"] %></td>
            <td><%= dojo["state"] %></td>
            <td>
                <a href="dojos/<%= dojo.id %>">Show</a> |
                <a href="dojos/<%= dojo.id %>/edit">Edit</a> |
                <!-- Authenticity token is automatically entered with the delete method, you don't need to include it in the <a> tag -->
                <a href="dojos/<%= dojo.id %>" data-method="delete">Delete</a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<p></p>
<a href="dojos/new">Make a New Dojo</a>
