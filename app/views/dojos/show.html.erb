<h1>Branch: <%=@dojo.branch%></h1>
<p><strong>Street:</strong> <%= @dojo.street %></p>
<p><strong>City:</strong> <%= @dojo.city %></p>
<p><strong>State:</strong> <%= @dojo.state %></p>

<a href="/dojos/<%= @dojo.id %>/edit">Edit</a>
<br>
<a href="/dojos">Go Back</a>


<h3>Student Roster</h3>
<table class="table table-bordered">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </thead>
    <tbody>
        <% @students.each do |student| %>
        <tr>
            <td> <%= student.first_name %> </td>
            <td> <%= student.last_name %></td>
            <td> <%= student.email %></td>
            <td>
                <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> |
                <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> |
                <!-- Authenticity token is automatically entered with the delete method, you don't need to include it in the <a> tag -->
                <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete">Delete</a>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
<p></p>
<a href="/dojos/<%= @dojo.id %>/students/new">Add a New Student</a>
<br>
<a href="/dojos">Go Back</a>
